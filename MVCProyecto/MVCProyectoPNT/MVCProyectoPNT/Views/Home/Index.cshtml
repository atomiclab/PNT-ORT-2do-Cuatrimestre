@model IEnumerable<IGrouping<MVCProyectoPNT.Entity.RepositorioArchivos, MVCProyectoPNT.Entity.Archivo3D>>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .hero-section {
        background-color: #004d4d;
        min-height: 400px;
        position: relative;
        overflow: hidden;
    }
    .card-like {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
    }
    .card-views {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 20px;
        padding: 2px 8px;
        font-size: 0.875rem;
    }
</style>
<div class="text-center">
</div>

<div class="hero-section text-white">
    <div class="container position-relative py-5">
        <div class="row">
            <div class="col-lg-6">
                <div class="d-flex align-items-center gap-2 mb-4">
                    <span>Repo3D - </span>
                    <span>Novedades</span>
                </div>
                <h1 class="display-5 fw-bold mb-4">Lorem ipsum grande</h1>
                <p class="lead mb-4">Lorem ipsum Lorem ipsum Lorem ipsum</p>
                <button class="btn btn-light rounded-pill px-4">Lorem ipsum</button>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="https://placehold.co/600x400/" alt="Algo de 400x400" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var grupo in Model)
            {
                <h3>@grupo.Key.Nombre</h3>
                <div class="row">
                    @foreach (var archivo in grupo)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img src="~/@archivo.FotoRuta" alt="Foto de @archivo.Nombre" class="card-img-top" style="max-height: 200px; object-fit: cover;" />
                                <div class="card-body">
                                    <h5 class="card-title">@archivo.Nombre</h5>
                                    <p class="card-text">@archivo.Descripcion</p>
                                    <p class="card-text"><small class="text-muted">Dueño: @(archivo.Usuario != null ? archivo.Usuario.Email : "N/A")</small></p>
                                    <p class="card-text"><small class="text-muted">Formato: @archivo.Formato</small></p>
                                    <p class="card-text"><small class="text-muted">Tamaño: @archivo.Tamano</small></p>
                                    <a asp-controller="Archivo3D" asp-action="Details" asp-route-id="@archivo.Id" class="btn btn-primary">Ver detalles</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <p>No se encontraron resultados para la búsqueda.</p>
    }
</div>



<style>
    .text-center {
        margin-top: 50px;
    }
    .btn-group {
        margin-top: 20px;
    }
    .btn {
        margin: 5px;
    }
    .card {
        margin-top: 20px;
    }
</style>